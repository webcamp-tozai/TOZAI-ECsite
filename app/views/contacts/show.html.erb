<div class="container-fluid" style="margin-top: 100px;">
  <div class="row">

    <!-- サイドバー -->
    <%= render 'layouts/sidebar_admins', {} %> <!-- 変数を再定義する必要有り -->

    <!-- メインページ -->
    <div class="col-9">
      <div class="row">
        <div class="container">
          <span class="font-weight-bold h3">問合せ詳細</span>
          <div class="box" style="height:10px;background-color:#005684;">
          </div>
          <p>The .table-striped class adds zebra-stripes to a table:</p>
          <div clas="col-6">
            <div class="float-right">
              <form class="form-inline">
                <div class="form-group">
                  <select class="form-control">
                    <option>未対応</option>
                    <option>対応中</option>
                    <option>対応済</option>
                  </select>
                    <a href="#" class="ml-3 btn btn-success btn-sm">更新</a>
                    <a href="#" class="ml-3 btn btn-secondary btn-sm">Back</a>
                </div>
              </form>
            </div>
          </div>

          <div class="col-12">
            <table class="table table-borderless">
              <tbody>
                <tr><!-- ここでordersをeach -->
                  <td>
                    <div class="card">
                      <div class="card-header">
                        <div class="row">
                          <div class="col-2">
                            <span class="small text-secondary">問合せ受付日</span><br>
                            <span class="text-dark">2018年6月9日</span><br>
                          </div>
                          <div class="col-3">
                            <span class="small text-secondary">Name</span><br>
                            <span class="text">マイケル・ジャクソン</span>
                          </div>
                          <div class="col-4">
                            <span class="small text-secondary">連絡先</span><br>
                            <span class="text">smooth-criminal@beat-it.com</span>
                          </div>
                          <div class="col-3">
                            <span class="small text-secondary">ステータス</span><br>
                            <span class="text-danger">未対応 - 2018/6/9</span>
                          </div>
                        </div>
                      </div>

                      <div class="card-body">
                        <p>-件名-商品について</p>
                        <p>先日買ったエアロスミスのCDが聞けませんでした</p>
                      </div>

                    </div><!-- cardの閉じタグ -->
                  </td>
                </tr><!-- ここでordersのeachを終了 -->

              </tbody>
            </table>

            <div class="row"><!-- ページネーション -->
              <div class="col-12">
                <nav aria-label="Page navigation example">
                  <ul class="pagination justify-content-center">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                  </ul>
                </nav>
              </div>
            </div><!-- ページネーション閉じタグ -->

          </div>
        </div>
      </div>
    </div><!-- メインページの閉じタグ -->
  </div><!-- 全体rowの閉じタグ -->
</div><!-- 全体containerの閉じタグ -->
