<!-- 管理者の編集画面 -->

<div class="container-fluid">
  <div class="row">

    <!-- サイドバー -->
    <%= render 'layouts/sidebar_admins', {} %> <!-- 変数を再定義する必要有り -->

    <!-- メインページ -->
    <div class="col-9  my-4">
      <div class="row">
        <div class="container">
          <span class="font-weight-bold h2">
            <%= current_admin.family_name_kanji %>
            <%= current_admin.given_name_kanji %>
            の情報</span>

          <div class="box" style="height:10px;background-color:#005684;">
          </div>
          <p>変更箇所を入力し、Updateを押して下さい。</p>
          <div class="row">
            <div class="col-6">
              <div class="jumbotron" style="height:33em;">
                <b>詳細</b>
                <p>Name: 
                  <%= current_admin.family_name_kanji %>
                  <%= current_admin.given_name_kanji %>
                </p>
                <p>Name(カナ): 
                  <%= current_admin.family_name_kana %>
                  <%= current_admin.given_name_kana %>
                </p>
                <p>Email: 
                  <%= current_admin.email %>
                </p>

                <%= link_to admins_path do %>
                  <button type="button" class="btn btn-info col-sm-offset-3 col-sm-6" style="margin:10px auto;">管理者一覧へ</button>
                <% end %>
              </div>
            </div>

            <div class="col-6">
              <div class="jumbotron"style="height:33em;">
                <b>編集</b>
                <%= form_for(@admin) do |f| %>
                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <%= f.label :姓 %>
                      <%= f.text_field :family_name_kanji, class: "form-control", id: "InputName" %>
                    </div>
                    <div class="form-group col-md-6">
                      <%= f.label :名 %>
                      <%= f.text_field :given_name_kanji, class: "form-control", id: "InputName" %>
                    </div>
                  </div>

                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <%= f.label :セイ %>
                      <%= f.text_field :family_name_kana, class: "form-control", id: "InputName" %>
                    </div>
                    <div class="form-group col-md-6">
                      <%= f.label :メイ %>
                      <%= f.text_field :given_name_kana, class: "form-control", id: "InputName" %>
                    </div>
                  </div>

                  <div class="form-row">
                    <div class="form-group col-12">
                      <%= f.label :メールアドレス %>
                      <%= f.email_field :email, class: "form-control", id: "InputEmail" %>
                    </div>
                  </div>

                  <div class="form-row">
                    <div class="form-group col-12">
                      <%= f.label :現在のパスワード %>
                      <%= f.password_field :password, class: "form-control", id: "InputPassword"  %>
                    </div>
                  </div>

                  <%= f.submit "-変更-", class:"btn btn-success col-sm-offset-3 col-sm-6", style:"margin:15px auto;" %>

                <% end %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div><!-- メインページの閉じタグ -->
  </div><!-- 全体rowの閉じタグ -->
</div><!-- 全体containerの閉じタグ -->