<!-- 管理者の新規登録画面（メイン管理者のみ） -->

<div class="container-fluid">
  <div class="row">

    <!-- サイドバー -->
    <%= render 'layouts/sidebar_admins', {} %> <!-- 変数を再定義する必要有り -->

    <!-- メインページ -->
    <div class="col-10 my-4">
      <div class="row justify-content-center">
        <div class="col-6 jumbotron">

          <p class="flash-message text-danger text-center">
            <%= flash[:admin_create_faled] %>
          </p>

          <h1 class="text-center font-weight-bold">管理者登録</h1>
          <%= devise_error_messages! %>
          <%= form_for(@resource, url: registration_path(resource_name)) do |f| %>
            <!-- 名前（漢字） -->
            <%= f.label :名前%>
            <div class="form-row">
              <div class="form-group col-md-6">
                <%= f.text_field :family_name_kanji, autofocus: true, class:"form-control", id:"InputName", placeholder:"姓" %>
              </div>
              <div class="form-group col-md-6">
                <%= f.text_field :given_name_kanji, autofocus: true, class:"form-control", id:"InputName", placeholder:"名" %>
              </div>
            </div>
            <!-- フリガナ -->
            <%= f.label :カタカナ%>
            <div class="form-row">
              <div class="form-group col-md-6">
                <%= f.text_field :family_name_kana, autofocus: true, class:"form-control", id:"InputName", placeholder:"セイ" %>
              </div>
              <div class="form-group col-md-6">
              <%= f.text_field :given_name_kana, autofocus: true, class:"form-control", id:"InputName", placeholder:"メイ" %>
              </div>
            </div>
            <!-- email -->
            <%= f.label :メールアドレス %>
            <div class="form-row">
              <div class="form-group col-12">
                <%= f.email_field :email, autofocus: true, class:"form-control", id:"InputEmail", placeholder:"メールアドレスを入力して下さい" %>
              </div>
            </div>
            <!-- パスワード -->
            <%= f.label :パスワード %>
            <div class="form-row">
              <div class="form-group col-12">
                <%= f.password_field :password, class:"form-control", id:"InputPassword", placeholder:"半角英数字(6文字~20文字)" %>
              </div>
            </div>
            <!-- パスワード再入力 -->
            <%= f.label :パスワード確認 %>
            <div class="form-row">
              <div class="form-group col-12">
                <%= f.password_field :password_confirmation, class:"form-control", id:"InputPassword", placeholder:"もう一度、パスワードを入力して下さい" %>
              </div>
            </div>

            <!-- 登録ボタン -->
            <%= f.submit "-サブ管理者アカウントを作成-", class:"btn btn-warning btn-block" %>

          <% end %>

        </div>
      </div>
    </div>

  </div>
</div>
