<!-- 管理者の新規登録画面（メイン管理者のみ） -->

<div class="container-fluid" style="margin-top: 100px;">
  <div class="row">

    <!-- サイドバー -->
    <%= render 'layouts/sidebar_admins', {} %> <!-- 変数を再定義する必要有り -->

    <!-- メインページ -->
    <div class="col-10 py-5">
      <div class="row justify-content-center">
        <div class="col-6 jumbotron">
          <h1 class="text-center font-weight-bold">新規登録</h1>
          <%= devise_error_messages! %>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <!-- 名前（漢字） -->
            <%= f.label :名前%>
            <div class="form-row">
              <div class="form-group col-md-6">
                <%= f.text_field :family_name_kanji, autofocus: true, class:"form-control", id:"InputName", placeholder:"姓" %>
              </div>
              <div class="form-group col-md-6">
                <%= f.text_field :given_name_kanji, autofocus: true, class:"form-control", id:"InputName", placeholder:"名" %>
              </div>
            </div>
            <!-- フリガナ -->
            <%= f.label :カタカナ%>
            <div class="form-row">
              <div class="form-group col-md-6">
                <%= f.text_field :family_name_kana, autofocus: true, class:"form-control", id:"InputName", placeholder:"セイ" %>
              </div>
              <div class="form-group col-md-6">
              <%= f.text_field :given_name_kana, autofocus: true, class:"form-control", id:"InputName", placeholder:"メイ" %>
              </div>
            </div>
            <!-- email -->
            <%= f.label :Emailアドレス %>
            <div class="form-row">
              <div class="form-group col-12">
                <%= f.email_field :email, autofocus: true, class:"form-control", id:"InputEmail", placeholder:"メールアドレスを入力して下さい" %>
              </div>
            </div>
            <!-- パスワード -->
            <%= f.label :Password %>
            <div class="form-row">
              <div class="form-group col-12">
                <%= f.password_field :password, class:"form-control", id:"InputPassword", placeholder:"半角英数字(6文字~20文字)" %>
              </div>
            </div>
            <!-- パスワード再入力 -->
            <%= f.label :Password確認 %>
            <div class="form-row">
              <div class="form-group col-12">
                <%= f.password_field :password_confirmation, class:"form-control", id:"InputPassword", placeholder:"もう一度、パスワードを入力して下さい" %>
              </div>
            </div>
            <!-- 登録ボタン -->
            <%= f.submit "-東西アカウントを作成-", class:"btn btn-warning btn-block" %>

          <% end %>

        </div>
      </div>
    </div>

  </div>
</div>

<!-- 実装時の参考用としてキープ -->
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "admins/shared/links" %>
