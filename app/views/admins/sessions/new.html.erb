<!-- 管理者のログイン画面 -->

<div class="container-fluid py-4">
  <div class="row">

    <!-- メインページ -->
    <div class="col-12">

      <p class="flash-message text-danger text-center">
        <%= flash[:sign_in_failed] %>
        <%= flash[:admin_create_faled] %>
      </p>

      <div class="row justify-content-center">
        <div class="col-6 jumbotron">
          <h1 class="text-center">管理者サインイン</h1>
          <%= devise_error_messages! %>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <!-- email -->
            <%= f.label :Emailアドレス %>
            <div class="form-row">
              <div class="form-group col-12">
                <%= f.email_field :email, autofocus: true, class:"form-control", id:"InputEmail", placeholder:"メールアドレスを入力して下さい" %>
              </div>
            </div>
            <!-- パスワード -->
            <%= f.label :Password %>
            <div class="form-row">
              <div class="form-group col-12">
                <%= f.password_field :password, class:"form-control", id:"InputPassword", placeholder:"半角英数字(6文字~20文字)" %>
              </div>
            </div>
            <!-- 登録ボタン -->
            <%= f.submit "-sign_in-", class:"btn btn-info btn-block" %>

          <% end %>

        </div>
      </div>
    </div>

  </div>
</div>
