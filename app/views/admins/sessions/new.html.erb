<!-- 管理者のログイン画面 -->

<div class="container-fluid" style="margin-top: 100px;">
  <div class="row">

    <!-- サイドバー -->
    <%= render 'layouts/sidebar_admins', {} %> <!-- 変数を再定義する必要有り -->

    <!-- メインページ -->
    <div class="col-10 py-5">
      <div class="row justify-content-center">
        <div class="col-6 jumbotron">
          <h1 class="text-center">管理者サインイン</h1>
          <div class="form-group">
            <label for="InputTextarea">Email</label>
            <input class="form-control" id="InputTextarea" placeholder="Eメールアドレスを入力して下さい">
          </div>
          <div class="form-group has-error has-feedback">
            <label for="inputError2">Password</label>
            <input class="form-control" id="inputError2" placeholder="半角英数字">
            <span class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
          </div>
          <div class="checkbox">
            <label><input type="checkbox" value=""> Remember me</label>
          </div>
          <button type="button" class="btn btn-info btn-block">-sign_in-</button>
        </div>
      </div>
    </div>

  </div>
</div>

<!-- 実装時の参考用としてキープ -->
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "admins/shared/links" %>
