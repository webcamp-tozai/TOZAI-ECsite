<div class="container-fluid"><!-- 全体container-->
  <div class="row"><!-- 全体row -->

    <!-- サイドバー -->
    <%= render 'layouts/sidebar_admins', {} %> <!-- 変数を再定義する必要有り -->

    <!-- メインページ -->
    <div class="col-10">
      <div class="row">
        <div class="container">
          <span class="font-weight-bold h2">商品追加</span>
          <div class="box" style="height:10px;background-color:#005684;">
          </div>

          <div class="container">
            <div class="jumbotron">
                <%= form_for @item do |f| %>
                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <label class="font-weight-bold">タイトル</label>
                      <%= f.text_field :title, class:"form-control" %>
                    </div>

                    <div class="form-group col-md-6">
                      <label class="control-label font-weight-bold">商品タイプ</label>

                      <div class="radio">
                        <label><%= f.radio_button :content_type,"シングルCD" %>シングルCD</label>
                        <label><%= f.radio_button :content_type,"アルバムCD" %>アルバムCD</label>
                        <label><%= f.radio_button :content_type,"レコード" %>レコード</label>
                      </div>

                    </div>

                  </div>

                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <label class="font-weight-bold">レーベル名</label>
                      <%= f.fields_for @label do |t| %>
                        <%= t.text_field :name %>
                      <% end %>
                    </div>

                    <div class="form-group col-md-6">
                      <label class="font-weight-bold">ジャンル</label>
                      <%= f.fields_for @genre do |t| %>
                        <%= t.text_field :genre_english %>
                        <%= t.text_field :genre_kana %>
                      <% end %>
                    </div>

                  </div>

                  <div class="form-group">
                    <label class="font-weight-bold">商品紹介</label>
                    <%= f.text_area :item_introduction, class:"form-control" %>
                  </div>

                  <div class="form-row">
                    <div class="form-group col-md-2">
                      <label class="font-weight-bold">入庫数</label>
                      <%= f.text_field :stock, class:"form-control" %>
                    </div>

                    <div class="form-group col-md-2">
                      <label class="font-weight-bold">商品単価</label>
                      <%= f.text_field :price_without_tax, class:"form-control" %>
                    </div>

                  </div>

                    <%= f.attachment_field :image %>

                  <table class="table table-responsive">
                    <thead>
                      <th class="text-center">ディスク番号</th>
                      <th class="text-center">トラック番号</th>
                      <th class="text-center">曲名</th>
                      <th class="text-center">曲の長さ時</th>
                      <th class="text-center">曲の長さ分</th>
                      <th class="text-center">曲の長さ秒</th>
                      <th class="text-center">アーティスト名</th>
                      <th class="text-center">アーティスト名<br>(カナ)</th>
                    </thead>
                    <tbody>
                    <%= f.fields_for :tracks do |t| %>
                      <td><%= t.text_field :disc_number, class:"form-control  mx-auto" %></td>
                      <td><%= t.text_field :track_number, class:"form-control  mx-auto" %></td>
                      <td><%= t.text_field :name, class:"form-control" %></td>
                      <td><%= t.text_field :length_hour, class:"form-control col-sm3 mx-auto" %>
                      <td><%= t.text_field :length_minute, class:"form-control col-sm3 mx-auto" %>
                      <td><%= t.text_field :length_second, class:"form-control col-sm3 mx-auto" %>
                      <% end %>
                      <td><%= text_field :artist, :name, class:"form-control" %></td>
                      <td><%= text_field :artist, :name_kana, class:"form-control" %></td>
                    </tbody>

                    <tbody>
                      <td><input class="form-control col-sm-3 mx-auto" type="text"></td>
                      <td><input class="form-control" type="text"></td>
                      <td><input class="form-control" type="text"></td>
                      <td><input class="form-control col-sm-3 mx-auto" type="text"></td>
                      <td><input class="form-control" type="text"></td>
                      <td><a href="#" class="btn btn-outline-danger btn-sm">delete</></td>
                    </tbody>
                  </table>
                  <%= f.submit "-商品追加-",class:"btn btn-success" %>
                <% end %>
            </div>
          </div>
        </div>
      </div><!-- メインページrowの閉じタグ -->
    </div><!-- メインページの閉じタグ -->
  </div><!-- 全体rowの閉じタグ -->
</div><!-- 全体containerの閉じタグ -->
