<!-- 管理者の商品一覧画面 -->
<div class="container-fluid">
  <div class="row">

    <!-- サイドバー -->
    <%= render 'layouts/sidebar_admins', {} %> <!-- 変数を再定義する必要有り -->

    <!-- メインページ -->
    <div class="col-9 py-4">
      <div class="row">
        <div class="container">
          <span class="font-weight-bold h3">商品一覧</span>
          <div class="box" style="height:10px;background-color:#005684;"></div>
          <p>TOZAI Records -No music No life-</p>

          <div clas="col-8 ">
            <span class="font-weight-bold">5件</span><span>の注文</span>
            <form class="form-inline float-right">
              <div class="form-group">
                <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="タイトル アーティスト名で検索"></input>
                <a class="mx-3 fa fa-search text-secondary fa-lg text-right" href="#"></a>
                <select class="form-control">
                  <option>アルバム</option>
                  <option>シングル</option>
                  <option>レコード</option>
                </select>
                <a href="#" class="ml-3 btn btn-secondary btn-sm">絞り込み</a>
              </div>
            </form>
          </div><br>

          <table class="table table-hover">
            <thead>
              <tr class="table-light">
                <th>タイトル</th>
                <th>アーティスト</th>
                <th>価格</th>
                <th>レビュー</th>
                <th>在庫数</th>
                <th>商品タイプ</th>
              </tr>
            </thead>

            <tbody>
            <% @item.each do |item| %>
              <tr>
                <td><%= link_to item.title, edit_item_path(item.id) %></td>
                <td><%= link_to item.artist.name, "#" %></td>
                <td class="text-right">
                  <%= number_to_currency item.price_without_tax,:unit => "￥", :precision => 0 %>
                </td>
                <td class="text-center"><%= item.item_reviews.count %>件</td>
                <td class="text-right">
                  <!-- 在庫が20以下の場合 -->
                  <% if item.stock <= 20 && item.stock >= 1 %>
                    <span class="text-danger">
                      <%= item.stock %>点
                    </span>
                  <!-- 在庫切れの場合 -->
                  <% elsif item.stock == 0 && item.is_deleted == false %>
                    <span class="text-secondary">
                      在庫切れ
                    </span>
                  <!-- 削除フラグtrueの場合 -->
                  <% elsif item.is_deleted == true %>
                    <span class="text-secondary">
                      取扱中止
                    </span>
                  <!-- 在庫が21以上の場合 -->
                  <% else %>
                    <span class="text-success">
                      <%= item.stock %>点
                    </span>
                  <% end %>
                </td>
                <td><%= item.content_type %></td>
              </tr>
            <% end %>

            </tbody>
          </table>

        </div><!--メインページのcontainer-->
      </div> <!--メインページのrow-->
    </div><!-- メインページの閉じタグ -->
  </div><!-- 全体rowの閉じタグ -->
</div><!-- 全体containerの閉じタグ -->
